<form class="box" action="/traillist/{{traillist._id}}/addtrail" method="POST">
    <label>Enter Trail Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input class="input" type="text" placeholder="Enter Trail Name" name="name">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Latitude" name="latitude">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Longitude" name="longitude">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Description" name="description">
            </div>
        </div>
    </div>
    <button class="button is-primary">Add Trail</button>
</form>